#include <stdio.h>
 
int main(void) {
  int n,i,x,y,z;
  scanf("%d",&n);
 int a[n][3];
 x=0;
 y=0;
 z=0;
  for(i=0;i<n;i++){
    scanf("%d%d%d",&a[i][0],&a[i][1],&a[i][2]);}
    for(i=0;i<n;i++){
      x=x+a[i][0];
      y=y+a[i][1];
      z=z+a[i][2];
    }
    if(x==0&&y==0&&z==0)
      printf("YES");
  else
  printf("NO");
  }
