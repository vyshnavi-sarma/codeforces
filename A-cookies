#include <iostream>
using namespace std;
 
int main(){
    int n,i,sum=0,count=0;
    cin>>n;
    int s[n];
    for(i=0;i<n;i++){
        cin>>s[i];
    }
    for(i=0;i<n;i++){
        sum=sum+s[i];
    }
    for(i=0;i<n;i++){
        if(((sum-s[i])%2)==0){
            count++;
        }
    } cout<<count;
}
