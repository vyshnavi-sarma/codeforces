#include<stdio.h>
#include<string.h>
int main(){
	int n;
  scanf("%d",&n);
	char word[100][100];
	int i,len;
		for(i=0;i<n;i++){
		scanf("%s",word[i]);
		len=strlen(word[i]);
		if(len<=10) 
      printf("%s",word[i]);
		else  
      printf("%c%d%c\n",word[i][0],len-2,word[i][len-1]);
      printf("\n");
		}
		return 0;
}
